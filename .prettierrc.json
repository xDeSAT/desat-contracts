{
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "proseWrap": "always",
  "overrides": [
    {
      "files": ["*.js", "*.sol"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
